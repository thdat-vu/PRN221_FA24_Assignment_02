@page
@model BookManagement_RazorPage.Pages.OrderPage.DetailsModel

@{
    ViewData["Title"] = "Details";
    string role = HttpContext.Session.GetString("Role");

    if (!role.Equals("Admin") && !role.Equals("User"))
    {
        Response.Redirect("/Permission");
    }
}

<h1>Order Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.TotalAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.TotalAmount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Account.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Account.Username)
        </dd> 
    </dl>
</div>

<h4>Order Details</h4>
<hr />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Order Detail ID</th>
            <th>Book Title</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.OrderDetails.Any())
        {
            foreach (var detail in Model.OrderDetails)
            {
                <tr>
                    <td>@detail.Id</td>
                    <td>@detail.Book.Title</td>
                    <td>@detail.Quantity</td>
                    <td>@detail.Price</td>
                    <td>@(detail.Quantity * detail.Price)</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No order details found for this order.</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-page="Index" class="btn btn-secondary">Back to Orders List</a>
</div>

